{% extends 'base.html.twig' %}

{% block title %}Inscripciones{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-clipboard-list me-2"></i>
                    Gestión de Inscripciones
                </h1>
                <a href="{{ path('app_inscripcion_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nueva Inscripción
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Listado de Inscripciones</h6>
                </div>
                <div class="card-body">
                    {% if inscripciones|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="inscripcionesTable">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Alumno</th>
                                        <th>Legajo</th>
                                        <th>Curso</th>
                                        <th>Dictado</th>
                                        <th>Docente</th>
                                        <th>Fecha Inicio</th>
                                        <th>Fecha Fin</th>
                                        <th>Nota</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for inscripcion in inscripciones %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>
                                            <strong>{{ inscripcion.alumno.apellido }}, {{ inscripcion.alumno.nombre }}</strong>
                                        </td>
                                        <td>
                                            {% if inscripcion.alumno.legajo %}
                                                <span class="badge badge-secondary">{{ inscripcion.alumno.legajo }}</span>
                                            {% else %}
                                                <span class="text-muted">Sin legajo</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge badge-info">{{ inscripcion.dictado.curso.nombre }}</span>
                                            {% if inscripcion.dictado.curso.carrera %}
                                                <br><small class="text-muted">{{ inscripcion.dictado.curso.carrera.nombre }}</small>
                                            {% endif %}
                                        </td>
                                        <td>{{ inscripcion.dictado.nombre }}</td>
                                        <td>
                                            {% if inscripcion.dictado.curso.docente %}
                                                {{ inscripcion.dictado.curso.docente.nombreCompleto }}
                                            {% else %}
                                                <span class="text-muted">Sin asignar</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ inscripcion.dictado.fechaInicio|date('d/m/Y') }}</td>
                                        <td>{{ inscripcion.dictado.fechaFin|date('d/m/Y') }}</td>
                                        <td>
                                            {% if inscripcion.nota %}
                                                <span class="badge badge-{{ inscripcion.nota.valor >= 7 ? 'success' : (inscripcion.nota.valor >= 4 ? 'warning' : 'danger') }}">
                                                    {{ inscripcion.nota.valor }}
                                                </span>
                                            {% else %}
                                                <span class="text-muted">Sin nota</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_inscripcion_show', {'id': inscripcion.id}) }}" 
                                                   class="btn btn-sm btn-info" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_inscripcion_edit', {'id': inscripcion.id}) }}" 
                                                   class="btn btn-sm btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteModal{{ inscripcion.id }}" 
                                                        title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>

                                            <!-- Modal de eliminación -->
                                            <div class="modal fade" id="deleteModal{{ inscripcion.id }}" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Confirmar Eliminación</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            ¿Está seguro de que desea eliminar la inscripción de 
                                                            <strong>{{ inscripcion.alumno.nombreCompleto }}</strong> 
                                                            en <strong>{{ inscripcion.dictado.curso.nombre }}</strong>?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                            {{ include('inscripcion/_delete_form.html.twig') }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-clipboard-list fa-5x text-muted mb-3"></i>
                            <h4 class="text-muted">No hay inscripciones registradas</h4>
                            <p class="text-muted">Comience agregando una nueva inscripción al sistema.</p>
                            <a href="{{ path('app_inscripcion_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Agregar Primera Inscripción
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#inscripcionesTable').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
        },
        "pageLength": 25,
        "order": [[ 1, "asc" ]]
    });
});
</script>
{% endblock %}
