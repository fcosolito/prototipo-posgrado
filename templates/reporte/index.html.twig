{% extends 'base.html.twig' %}

{% block title %}Reportes del Sistema{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-chart-line me-2"></i>
                Centro de Reportes
            </h1>
        </div>
    </div>

    <div class="row">
        <!-- Reportes de Notas -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-graduation-cap me-2"></i>
                        Reportes de Notas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="{{ path('app_reporte_notas_curso') }}" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">
                                    <i class="fas fa-list-alt text-info me-2"></i>
                                    Notas por Curso
                                </h5>
                            </div>
                            <p class="mb-1">Visualizar las notas de todos los alumnos de un curso específico.</p>
                        </a>
                        <a href="{{ path('app_reporte_notas_alumno') }}" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">
                                    <i class="fas fa-user text-success me-2"></i>
                                    Notas por Alumno
                                </h5>
                            </div>
                            <p class="mb-1">Ver el historial completo de notas de un alumno específico.</p>
                        </a>
                        <a href="{{ path('app_reporte_exportar_notas_carrera') }}" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">
                                    <i class="fas fa-file-export text-warning me-2"></i>
                                    Exportar Notas por Carrera
                                </h5>
                            </div>
                            <p class="mb-1">Generar reporte de notas de un alumno por carrera para TFI.</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reportes Financieros -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-dollar-sign me-2"></i>
                        Reportes Financieros
                    </h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="{{ path('app_reporte_estado_cuotas') }}" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">
                                    <i class="fas fa-calendar-check text-primary me-2"></i>
                                    Estado de Cuotas
                                </h5>
                            </div>
                            <p class="mb-1">Consultar el estado de pagos y cuotas pendientes por alumno.</p>
                        </a>
                        <a href="{{ path('app_reporte_estadisticas_generales') }}" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">
                                    <i class="fas fa-chart-bar text-info me-2"></i>
                                    Estadísticas Generales
                                </h5>
                            </div>
                            <p class="mb-1">Ver estadísticas completas del sistema y análisis de datos.</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reportes Rápidos -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-bolt me-2"></i>
                        Accesos Rápidos
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="{{ path('app_alumno_index') }}" class="btn btn-outline-primary btn-block w-100">
                                <i class="fas fa-users"></i><br>
                                <small>Gestionar Alumnos</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="{{ path('app_curso_index') }}" class="btn btn-outline-success btn-block w-100">
                                <i class="fas fa-book"></i><br>
                                <small>Gestionar Cursos</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="{{ path('app_carrera_index') }}" class="btn btn-outline-warning btn-block w-100">
                                <i class="fas fa-graduation-cap"></i><br>
                                <small>Gestionar Carreras</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-info btn-block w-100">
                                <i class="fas fa-tachometer-alt"></i><br>
                                <small>Dashboard Principal</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
