{% extends 'base.html.twig' %}

{% block title %}Docentes{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-chalkboard-teacher me-2"></i>
                    Gestión de Docentes
                </h1>
                <a href="{{ path('app_docente_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nuevo Docente
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Listado de Docentes</h6>
                </div>
                <div class="card-body">
                    {% if docentes|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre Completo</th>
                                        <th>DNI</th>
                                        <th>Correo</th>
                                        <th>Especialidad</th>
                                        <th>Título</th>
                                        <th>Cursos</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for docente in docentes %}
                                    <tr>
                                        <td>{{ docente.id }}</td>
                                        <td>
                                            <strong>{{ docente.nombreCompleto }}</strong>
                                        </td>
                                        <td>{{ docente.dni }}</td>
                                        <td>
                                            {% if docente.correo %}
                                                <a href="mailto:{{ docente.correo }}">{{ docente.correo }}</a>
                                            {% else %}
                                                <span class="text-muted">No especificado</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if docente.especialidad %}
                                                <span class="badge badge-info">{{ docente.especialidad }}</span>
                                            {% else %}
                                                <span class="text-muted">No especificada</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if docente.titulo %}
                                                {{ docente.titulo }}
                                            {% else %}
                                                <span class="text-muted">No especificado</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge badge-success">{{ docente.cursos|length }} cursos</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_docente_show', {'id': docente.id}) }}" 
                                                   class="btn btn-sm btn-info" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_docente_edit', {'id': docente.id}) }}" 
                                                   class="btn btn-sm btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteModal{{ docente.id }}" 
                                                        title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>

                                            <!-- Modal de eliminación -->
                                            <div class="modal fade" id="deleteModal{{ docente.id }}" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Confirmar Eliminación</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            ¿Está seguro de que desea eliminar al docente 
                                                            <strong>{{ docente.nombreCompleto }}</strong>?
                                                            {% if docente.cursos|length > 0 %}
                                                                <br><br>
                                                                <div class="alert alert-warning">
                                                                    <i class="fas fa-exclamation-triangle"></i>
                                                                    Este docente tiene {{ docente.cursos|length }} curso(s) asignado(s).
                                                                </div>
                                                            {% endif %}
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                            {{ include('docente/_delete_form.html.twig') }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-chalkboard-teacher fa-5x text-muted mb-3"></i>
                            <h4 class="text-muted">No hay docentes registrados</h4>
                            <p class="text-muted">Comience agregando un nuevo docente al sistema.</p>
                            <a href="{{ path('app_docente_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Agregar Primer Docente
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#dataTable').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
        },
        "pageLength": 25,
        "order": [[ 1, "asc" ]]
    });
});
</script>
{% endblock %}
