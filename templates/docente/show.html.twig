{% extends 'base.html.twig' %}

{% block title %}Docente: {{ docente.nombreCompleto }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-chalkboard-teacher me-2"></i>
                    {{ docente.nombreCompleto }}
                </h1>
                <div>
                    <a href="{{ path('app_docente_edit', {'id': docente.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="{{ path('app_docente_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver al Listado
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Información Personal -->
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user me-2"></i>
                        Información Personal
                    </h6>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td><strong>Nombre:</strong></td>
                            <td>{{ docente.nombre }}</td>
                        </tr>
                        <tr>
                            <td><strong>Apellido:</strong></td>
                            <td>{{ docente.apellido }}</td>
                        </tr>
                        <tr>
                            <td><strong>DNI:</strong></td>
                            <td>{{ docente.dni }}</td>
                        </tr>
                        <tr>
                            <td><strong>Correo:</strong></td>
                            <td>
                                {% if docente.correo %}
                                    <a href="mailto:{{ docente.correo }}">{{ docente.correo }}</a>
                                {% else %}
                                    <span class="text-muted">No especificado</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Especialidad:</strong></td>
                            <td>
                                {% if docente.especialidad %}
                                    <span class="badge badge-info">{{ docente.especialidad }}</span>
                                {% else %}
                                    <span class="text-muted">No especificada</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Título:</strong></td>
                            <td>
                                {% if docente.titulo %}
                                    {{ docente.titulo }}
                                {% else %}
                                    <span class="text-muted">No especificado</span>
                                {% endif %}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Cursos Asignados -->
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-book me-2"></i>
                        Cursos Asignados ({{ docente.cursos|length }})
                    </h6>
                </div>
                <div class="card-body">
                    {% if docente.cursos|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Curso</th>
                                        <th>Carrera</th>
                                        <th>Horas</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for curso in docente.cursos %}
                                    <tr>
                                        <td>
                                            <strong>{{ curso.nombre }}</strong>
                                            {% if curso.esObligatorio %}
                                                <span class="badge badge-primary badge-sm">Obligatorio</span>
                                            {% else %}
                                                <span class="badge badge-secondary badge-sm">Opcional</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if curso.carrera %}
                                                <span class="badge badge-info">{{ curso.carrera.nombre }}</span>
                                            {% else %}
                                                <span class="text-muted">Sin carrera</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ curso.horas }}h</td>
                                        <td>
                                            <a href="{{ path('app_curso_show', {'id': curso.id}) }}" 
                                               class="btn btn-sm btn-info" title="Ver curso">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-3">
                            <i class="fas fa-book fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Este docente no tiene cursos asignados.</p>
                            <a href="{{ path('app_curso_new') }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> Asignar Curso
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas del Docente -->
    {% if docente.cursos|length > 0 %}
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-chart-bar me-2"></i>
                        Estadísticas del Docente
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="border-left-primary p-3">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Total Cursos
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ docente.cursos|length }}</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-left-success p-3">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Total Horas
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    {{ docente.cursos|reduce((total, curso) => total + curso.horas, 0) }}h
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-left-info p-3">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Carreras
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    {{ docente.cursos|map(c => c.carrera)|filter(c => c)|unique|length }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-left-warning p-3">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Cursos Opcionales
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    {{ docente.cursos|filter(c => not c.esObligatorio)|length }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>

<style>
.border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
}
.border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
}
.border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
}
.border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
}
.text-xs {
    font-size: 0.7rem;
}
</style>
{% endblock %}
