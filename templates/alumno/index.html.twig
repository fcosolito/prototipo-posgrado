{% extends 'base.html.twig' %}

{% block title %}Alumno index{% endblock %}

{% block body %}
    <h1>Alumno index</h1>

    {{ form_start(form) }}
        {{ form_row(form.nombre)}}
        {{ form_row(form.apellido)}}
        {{ form_row(form.dni)}}
        {{ form_row(form.buscar)}}
    {{ form_end(form) }}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Dni</th>
                <th>Cuil</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for alumno in alumnos %}
            <tr>
                <td>{{ alumno.id }}</td>
                <td>{{ alumno.nombre }}</td>
                <td>{{ alumno.apellido }}</td>
                <td>{{ alumno.correo }}</td>
                <td>{{ alumno.dni }}</td>
                <td>{{ alumno.cuil }}</td>
                <td>
                    <a href="{{ path('app_alumno_show', {'id': alumno.id}) }}">show</a>
                    <a href="{{ path('app_alumno_edit', {'id': alumno.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_alumno_new') }}">Create new</a>
{% endblock %}
